//Vari치veis da bolinha
let xBolinha = 300;
let yBolinha = 200;
let diametro = 15;
let raio = diametro / 2;

//Vari치veis da velocidade da bolinha
let velocidadeXBolinha = 6;
let velocidadeYBolinha = 6;

//Vari치veis da raquete
let xRaquete = 5;
let yRaquete = 155;
let larguraRaquete = 10;
let alturaRaquete = 90;

//Vari치veis do oponente
let xOponente = 585;
let yOponente = 155;
let velocidadeYOponente;
let dOponenteBolinha = 0;

//Placar do jogo
let meusPontos = 0;
let pontosOponente = 0;

//Sons do jogo
let raquetada;
let ponto;
let trilha;

function preload(){
  trilha = loadSound("trilha.mp3");
  ponto = loadSound("ponto.mp3");
  raquetada = loadSound("raquetada.mp3");
}
    
function setup() {
  createCanvas(600, 400);
  trilha.loop();
}

function draw() {
  background(0);
  mostraBolinha();
  movimentaBolinha();
  verificaColisaoBorda();
  mostraRaquete(xRaquete, yRaquete);
  movimentaRaquete();
  verificaColisaoRaquete();
  mostraRaquete(xOponente, yOponente);
  movimentaOponente();
  verificaColisaoOponente();
  incluiPlacar();
  marcaPonto();
}

function mostraBolinha(){
  fill(255);
  circle(xBolinha, yBolinha, diametro);
}

function movimentaBolinha(){
  xBolinha += velocidadeXBolinha;
  yBolinha += velocidadeYBolinha;
}

function verificaColisaoBorda(){
  if (xBolinha > width - raio ||
     xBolinha < 0 + raio){
    velocidadeXBolinha *= -1;
  }
  
  if (yBolinha > height - raio||
     yBolinha < 0 + raio){
    velocidadeYBolinha *= -1;
  }
}

function mostraRaquete(x, y){
  rect(x, y, larguraRaquete, alturaRaquete);
}

function movimentaRaquete(){
  if (keyIsDown(87)){
    yRaquete -= 10;
  }
  if (keyIsDown(83)){
    yRaquete += 10;
  }
  yRaquete = constrain(yRaquete, 0, 310);
}

function verificaColisaoRaquete(){
  if (xBolinha - raio < xRaquete + larguraRaquete && yBolinha < yRaquete + alturaRaquete && yBolinha > yRaquete){
    velocidadeXBolinha *= -1;
    raquetada.play();
  }
}

function movimentaOponente() {
  velocidadeYOponente = yBolinha - yOponente - alturaRaquete / 2 - dOponenteBolinha;
  yOponente += velocidadeYOponente;
  yOponente = constrain(yOponente, 0, 310);
  if(pontosOponente > meusPontos){
    dOponenteBolinha = 50;
  }
  if(pontosOponente < meusPontos && dOponenteBolinha > 25){
    dOponenteBolinha -= 3;
  }
}

function verificaColisaoOponente(){
  if (xBolinha + raio > xOponente && yBolinha < yOponente + alturaRaquete && yBolinha > yOponente){
    velocidadeXBolinha *= -1;
    raquetada.play();
  }
}

function incluiPlacar(){
  stroke(255);
  textSize(20);
  fill(color(255, 140, 0));
  rect(135, 10, 40, 30);
  fill(255);
  text(meusPontos, 150, 32);
  fill(color(255, 140, 0));
  rect(435, 10, 40, 30);
  fill(255);
  text(pontosOponente, 450, 32);
}

function marcaPonto(){
  if (xBolinha > 599 - raio){
    meusPontos += 1;
    ponto.play();
    xBolinha = 577;
  }
  if (xBolinha < raio + 1){
    pontosOponente += 1;
    ponto.play();
    xBolinha = 23;
  }
}
